<br>
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />


  <% @courses.each do |course| %>
      <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
     <%= image_tag course.image, class: 'img-fluid' %>
    </h2>


      <div class="row">  
          <div class="col-sm-6 col-12 offset-1">
            <%= course.description %>
          </div>
          <div class="col-sm-4 col-12 text-center">
            <%= link_to 'Enroll', course_path(course), class: 'btn btn-primary btn-large' %>
          </div>
      </div>

    <br class="clr" />

   <% end %>


</div>

